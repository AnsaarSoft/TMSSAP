@code
{
    bool flgAdmin = false;

    protected override async Task OnInitializedAsync()
    {
        await oAcctService.Initiallize();
        if (oAcctService.oUser is not null)
        {
            if (oAcctService.oUser.User.flgSuper)
            {
                flgAdmin = true;
            }
            else
            {
                flgAdmin = false;
            }
        }

    }
}


