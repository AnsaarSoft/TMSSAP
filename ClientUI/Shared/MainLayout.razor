@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />


<AuthorizeView>
    <Authorized>
        <MudLayout>
            <MudAppBar Color="Color.Primary" Fixed="true" Elevation="1">
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e)=> DrawToggle())"></MudIconButton>
                <MudText Typo="Typo.h5" Class="ml-3">Time Sheet</MudText>
                <MudSpacer />
                <MudText Typo="Typo.h6">Welcome @context.User.Identity.Name</MudText>
                <MudText Typo="Typo.h6" Class="ml-3">LogOut</MudText>
                <MudIconButton Icon="@Icons.Material.Outlined.People" Color="Color.Inherit" Edge="Edge.End" OnClick="LogOut" />

            </MudAppBar>
            <MudDrawer @bind-Open="@flgSideToggle" Elevation="2" ClipMode="DrawerClipMode.Docked">
                <NavMenu />
            </MudDrawer>
            <MudMainContent>
                <MudContainer MaxWidth="MaxWidth.Medium">
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </Authorized>
    <NotAuthorized>
        <LoginRouteComponent/>
    </NotAuthorized>
</AuthorizeView>





